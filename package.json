{
  "name": "whoareyouxmas-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "export:web": "pnpm --filter web build && mkdir -p apps/firetv/app/src/main/assets && cp -r apps/web/out/* apps/firetv/app/src/main/assets/",
    "lint": "pnpm --filter web lint",
    "image:gen": "pnpm --filter image-generator image:gen"
  },
  "dependencies": {
    "next": "16.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "@vercel/analytics": "^1.4.1"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "tailwindcss": "^4",
    "@tailwindcss/postcss": "^4"
  }
}
